{
	"compilerOptions": {
	  "module": "commonjs",
	  "esModuleInterop": true,
	  "target": "es6",
	  "moduleResolution": "node",
	  "sourceMap": true,
	  "types": ["node", "jest"],
	  "forceConsistentCasingInFileNames": true,
	  "outDir": "dist"
	},
	"lib": ["es2015"],
	"exclude": [
		"node_modules",
		"public_html",
		"test",
		"**/*.spec.ts",
		"**/*.test.ts",
	     ]
}

